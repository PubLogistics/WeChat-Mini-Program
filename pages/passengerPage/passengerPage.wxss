.container {
    width: 100%;
    height: 100vh;
    margin: 0;
    padding: 0;
    position: relative;
    background: #eee;
}

.half-bg {
    width: 100%;
    height: 800rpx;
}

.location {
    width: 12%;
    height: 100rpx;
    position: absolute;
    top: 5rpx;
    left: 0;
    display: flex;
    text-align: left;
}

.location text {
    font-size: 10px;
}

.searchBlock {
    width: 70%;
    height: 70rpx;
    display: flex;
    position: absolute;
    top: 25rpx;
    left: 200rpx;
    /* background-color: white; */
}

.search {
    width: 100%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-items: flex-start;
}

.inputBlock {
    width: 100%;
    height: 60rpx;
    border-radius: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f6f6f6;
}

.inputBlock input {
    width: 45%;
    height: 100%;
    font-size: 32rpx;
}

.searchButton {
    width: 5%;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.searchButton text {
    font-size: 20rpx;
}

